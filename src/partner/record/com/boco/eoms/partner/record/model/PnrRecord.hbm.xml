<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
    <class
            name="com.boco.eoms.partner.record.model.PnrRecord"
            table="pnr_record"
    >
    <id name="id" column="id" unsaved-value="null">
    	<generator class="uuid.hex"></generator>
    </id>
        <property name="city" column="city" />
		<property name="country" column="country" />
		<property name="site" column="site" />
		<property name="title" column="title" />
		<property name="summary" column="summary" />
		<property name="keyword" column="keyword" />
		<property name="specialty" column="specialty" />
		<property name="attachment" column="attachment" />
        <property name="addUser" column="add_User" />
		<property name="addTime" column="add_Time" />
		<property name="state" column="state" />
		<property name="isUpdate" column="is_Update" />
		<property name="downloadNum" column="download_Num" />
		<property name="recordType" column="record_type" />
		
    </class>    
</hibernate-mapping>    